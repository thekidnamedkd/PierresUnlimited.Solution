@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>;

<h1>ALL FLAVORS</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>You have not added any flavors yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <h4>+ @Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</h4>
}
<hr />
<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>