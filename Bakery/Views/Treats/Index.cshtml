@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Treat>;

<h1>ALL TREATS</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>You have not listed any treats yet!</h3>
} 

@foreach (Treat treat in Model)
{
  <h4>+ @Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</h4>
}
<hr />
<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>